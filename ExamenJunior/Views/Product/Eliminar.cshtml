@model Product
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Editar Producto
    </div>
    <div class="card-body">
        <form asp-action="Eliminar" asp-controller="Product" method="post">

            <input asp-for="ProductId" type="hidden" class="form-control">

            <div class="alert alert-danger" role="alert">
                "Desea eliminar el producto : @Html.DisplayTextFor(m => m.ProductDescription) ?
            </div>

            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Listar" asp-controller="Product" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>

